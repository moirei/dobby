{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "lib": ["es2019"],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "strict": true
  },
  "include": ["src"]
}
